<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="session">
    
    	<!-- 数据库方言 -->
    	<property name="hibernate.dialect">org.hibernate.dialect.Oracle9Dialect</property>
    	
    	<!-- 数据库驱动类 -->	
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        
        <!-- 连接数据库的URL -->
        <property name="hibernate.connection.url">jdbc:oracle:thin:@172.30.4.11:1521:orcl</property>
        
        <!-- 用户名 -->
        <property name="hibernate.connection.username">lesson</property>
        <!-- 密码 -->
        <property name="hibernate.connection.password">lesson</property>
        
        <!-- 在控制台显示sql语句 -->
        <property name="show_sql">true</property>
        
        <!-- 根据需要自动生成、更新数据表 -->
        <property name="hbm2ddl.auto">update</property>
        
        <!-- 注册所有ORM映射文件 -->
        <mapping resource="com/haiersoft/ch05/entity/Customer.hbm.xml"/>
        <mapping resource="com/haiersoft/ch05/entity/Order.hbm.xml"/>
        <mapping resource="com/haiersoft/ch05/entity/IdCard.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
